package common;

//추상클래스 처리
public abstract class Appliance {
	
	//자식이 사용할 수 있게 protected 처리
	 protected boolean onoff = false;	//전원
	 protected String name;				//제품명
	 protected int powerCon;			//소비전력
	 
	 protected Appliance() {	 
	 }
	 
	 protected Appliance(String name,  int powerCon) {
		 this.name = name;
		 this.powerCon = powerCon;
	 }
	 
	 
	    @Override
	public String toString() {
		return "Appliance [전원: " + onoff + ", 제품: " + name + ", 전력소모량: " + powerCon + "]";
	}
	    
	    //abstract : 자식이 내용을 전부 가지고 있기 때문에 부모는 형식만 가지는 걸로 처리 (반드시 추상클래스 처리 필요. Ex, 4번째 줄 )
		public abstract void power();
	    
	    
	    
	    
	    

}


