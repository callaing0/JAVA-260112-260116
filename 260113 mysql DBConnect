package javastudy26011302;

import java.sql.ResultSet;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;

public class DBConnect {

    private Connection conn;
    private Statement st;
    private ResultSet rs;

    public DBConnect() {
        connect();
    }

    // 데이터베이스 접속
    public void connect() {
        try {
            Class.forName("com.mysql.cj.jdbc.Driver");

            String username = "callaing";
            String password = "8182";
            String url = "jdbc:mysql://localhost:3306/callaing";

            conn = DriverManager.getConnection(url, username, password);
        } catch (Exception e) {
            System.out.println("접속 실패");
            e.printStackTrace();
        }
    }

    // Product 테이블 데이터 불러오기
    public Product[] selectData() {

        Product[] product = new Product[6];
        String sql = "select * from product";

        try {
            st = conn.createStatement();
            rs = st.executeQuery(sql);   

            int i = 0;
            while (rs.next()) {
                Product temp = new Product(
                        rs.getString("item_name"),
                        rs.getInt("price"),
                        rs.getInt("stock"),
                        rs.getString("description")
                );
                product[i] = temp;      
                i++;
            }

        } catch (Exception e) {
            System.out.println("쿼리 또는 객체 생성 실패");
            e.printStackTrace();
        }

        return product;
    }
}
